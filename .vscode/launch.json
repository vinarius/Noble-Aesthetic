{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Noble Aesthetic",
      "skipFiles": [
        "<node_internals>/**"
      ],
      // use ts-node to transpile TypeScript to JavaScript
      "runtimeArgs": [
        "-r",
        "./node_modules/ts-node/register/transpile-only"
      ],
      // the file to launch. Typically, the entry point of the program.
      "args": [
        "${workspaceFolder}/bin/infrastructure.ts"
      ]
    },
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "protocol": "inspector"
    }
  ]
}